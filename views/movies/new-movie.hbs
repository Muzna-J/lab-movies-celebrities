
<h1>New Movie</h1>

<form method="POST" action="/movies/create">
  <div>
    <label>Title:</label>
    <input type="text" name="title" required>
  </div>
  <div>
    <label>Genre:</label>
    <input type="text" name="genre" required>
  </div>
  <div>
    <label>Plot:</label>
    <textarea name="plot" required></textarea>
  </div>
  <div>
    <label>Cast:</label>
    <select name="cast" multiple>
      {{#each celebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <button type="submit">Add Movie</button>
</form>
